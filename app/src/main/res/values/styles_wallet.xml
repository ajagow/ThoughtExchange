<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Wallet Themes -->
    <style name="card_small_text" parent="BaseSmall">
        <item name="android:paddingLeft">3dp</item>
    </style>
    <style name="card_eyebrow" parent="BaseSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="card_tag_active" parent="BaseTag">
        <item name="android:background">@drawable/tag_background_green</item>
    </style>

    <style name="card_tag_closed" parent="BaseTag">
        <item name="android:background">@drawable/tag_background_red</item>
    </style>

    <style name="CardUserWrapper">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/pill_background</item>
    </style>
</resources>
