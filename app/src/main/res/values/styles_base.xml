<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXT STYLES -->
    <style name="TextDark">
        <item name="android:textColor">@color/primaryDark</item>
    </style>
    <style name="TextLight">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseH1Light" parent="TextLight">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseH2Dark" parent="TextDark">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- COMPONENT STYLES-->
    <style name="BaseTextInput">
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/base_input_border</item>
    </style>
    <style name="BaseTextInputLabelDark" parent="TextDark">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/base_button_background_primary</item>
    </style>

</resources>