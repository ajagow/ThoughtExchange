<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXT STYLES -->
    <style name="TextDark">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:fontFamily">@font/lato_reg</item>
    </style>
    <style name="TextLight">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseH1Light" parent="TextLight">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseH2Dark" parent="TextDark">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BasePDark" parent="TextDark">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- COMPONENT STYLES-->
    <style name="BaseTextInput">
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:background">@drawable/base_input_border</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BaseTextInputLabelDark" parent="TextDark">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/base_button_background_primary</item>
    </style>
    <style name="BaseButtonLink" parent="BaseButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primaryBlue</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>