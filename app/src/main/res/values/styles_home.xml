<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--HOMEFEED TABS-->
    <style name="homefeed_tab" parent="BaseButtonLink">
        <item name="android:textColor">@color/primaryDark</item>
    </style>
    <style name="homefeed_tab_selected" parent="homefeed_tab">
        <item name="android:background">@drawable/tab_selected_background</item>
    </style>
    <style name="homefeed_tab_unselected" parent="homefeed_tab">
        <item name="android:background">@color/LightGreyFD</item>
    </style>

    <!--HOMEFEED CARD-->
    <style name="homefeed_card">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    <style name="homefeed_card_text">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>
    <style name="homefeed_likedislike_button" parent="BaseButtonLink">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
    </style>
    <style name="homefeed_dislike" parent="homefeed_likedislike_button">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="homefeed_like" parent="homefeed_likedislike_button">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- HOMEFEED INVEST CARD -->
    <style name="homefeed_invest_card">
        <item name="android:background">@drawable/card_small_background</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
    </style>
    <style name="homefeed_invest_card_text" parent="homefeed_card_text">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <style name="homefeed_invest_card_endtime" parent="BaseSmall">
        <item name="android:layout_marginBottom">7dp</item>
    </style>
</resources>