<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--HOMEFEED TABS-->
    <style name="homefeed_tab" parent="BaseButtonLink">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:background">@color/lightGreyED</item>
    </style>
    <style name="homefeed_tab_selected" parent="homefeed_tab"></style>
    <style name="homefeed_tab_unselected" parent="homefeed_tab"></style>

    <!--HOMEFEED CARD-->
    <style name="homefeed_card">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    <style name="homefeed_card_text">
        <item name="android:fontFamily">@font/merriweather</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>
    <style name="homefeed_likedislike_button" parent="BaseButtonLink">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
    </style>
    <style name="homefeed_dislike" parent="homefeed_likedislike_button">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="homefeed_like" parent="homefeed_likedislike_button">
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>