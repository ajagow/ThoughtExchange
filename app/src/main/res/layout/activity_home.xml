<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_headerfooter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="74dp">

        <Button
            style="@style/homefeed_tab_selected"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="Feed" />

        <Button
            style="@style/homefeed_tab_unselected"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="Invest" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/login_card_background">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            style="@style/homefeed_card"
            android:orientation="vertical">

            <TextView
                style="@style/homefeed_card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every toothbrush is recommended by dentists because they just want us to brush our teeth to brush our teeth" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/dislike_button"
                    style="@style/homefeed_dislike"
                    android:background="@drawable/dislike_button" />

                <Button
                    android:id="@+id/like_button"
                    style="@style/homefeed_like"
                    android:background="@drawable/like_button" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>