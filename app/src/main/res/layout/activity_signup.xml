<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_background"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginH1"
            android:text="Thought\nExchange"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_card_background"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LoginH2"
                android:text="Sign up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LoginInputLabel"
                android:text="Name" />

            <EditText
                android:id="@+id/name"
                style="@style/LoginInput"
                android:layout_width="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LoginInputLabel"
                android:text="Email" />

            <EditText
                android:id="@+id/email"
                style="@style/LoginInput"
                android:layout_width="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SignupInputLabel"
                android:text="Password" />
            <TextView
                android:id="@+id/pass_validation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SignupInputHelp"
                android:text="Password must be at least 8 characters"/>

            <EditText
                android:id="@+id/password"
                style="@style/LoginInput"
                android:inputType="textPassword"
                android:layout_width="match_parent" />

            <Button
                android:id="@+id/signup_btn"
                style="@style/BaseButton"
                android:onClick="onSignup"
                android:layout_width="match_parent"
                android:text="Sign up" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BaseTextInputLabelDark"
                    android:text="Already have an account?"/>
                <Button
                    android:id="@+id/back_to_login_btn"
                    style="@style/BaseButtonLink"
                    android:text="Log in"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>