<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/homefeed_invest_card">

            <TextView
                android:id="@+id/my_ideas_date_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/card_eyebrow"
                android:text="Posted 10:48am July 11 2019"/>

            <TextView
                android:id="@+id/my_ideas_content"
                style="@style/homefeed_invest_card_text"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ariel doesn't know what a fork is for, yet her dad wields a trident" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    style="card_icon_user"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/investor"
                    android:baselineAlignBottom="true"
                    />
                <TextView
                    android:id="@+id/my_ideas_investors"
                    style="@style/card_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="94"/>
                <ImageView
                    style="card_icon_coin"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/coin"
                    android:baselineAlignBottom="true"
                    />
                <TextView
                    android:id="@+id/my_ideas_value"
                    style="@style/card_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,276"/>
            </LinearLayout>

</LinearLayout>