<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeInvestPopupFragment"
    android:background="@color/popupBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="40dp"
        android:orientation="vertical"
        android:background="@drawable/login_card_background">

        <TextView
            android:id="@+id/popup_content"
            style="@style/homefeed_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every toothbrush is recommended by dentists because they just want us to brush our teeth to brush our teeth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LoginInputLabel"
            android:text="How much are you investing?" />

        <EditText
            android:id="@+id/popup_investment_amount"
            style="@style/LoginInput"
            android:layout_width="match_parent"
            android:maxLength="7"
            android:inputType="number" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popup_end_time"
                    style="@style/homefeed_invest_card_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ends at: 11:53:36" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        style="card_icon_user"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:baselineAlignBottom="true"
                        android:src="@drawable/investor" />

                    <TextView
                        android:id="@+id/popup_num_of_investors"
                        style="@style/card_small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94" />

                    <ImageView
                        style="card_icon_coin"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="12dp"
                        android:baselineAlignBottom="true"
                        android:src="@drawable/coin" />

                    <TextView
                        android:id="@+id/popu_investment_worth"
                        style="@style/card_small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,276" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/popup_invest_btn"
                android:layout_width="match_parent"
                style="@style/BaseButton"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:text="Confirm Investment" />

        <Button
            android:id="@+id/popup_close_btn"
            android:layout_width="match_parent"
            style="@style/BaseButtonLinkClose"
            android:layout_marginTop="20dp"
            android:text="Cancel" />

    </LinearLayout>

</RelativeLayout>