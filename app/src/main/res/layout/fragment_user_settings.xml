<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popupBackground"
    tools:context=".UserSettings">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/login_card_background"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/user_popup_name"
            style="@style/BaseH2Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..." />

        <TextView
            android:id="@+id/user_popup_email"
            style="@style/Base.CardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="" />

        <Button
            android:id="@+id/logout"
            style="@style/BaseButton"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:text="Sign out" />

        <Button
            android:id="@+id/settingsClose"
            android:layout_width="match_parent"
            style="@style/BaseButtonLinkClose"
            android:layout_marginTop="10dp"
            android:textColor="@color/closeRed"
            android:text="Close"/>

    </LinearLayout>
</RelativeLayout>