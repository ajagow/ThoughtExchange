<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettings"
    android:background="@color/popupBackground">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="40dp"
        android:orientation="vertical"
        android:background="@drawable/login_card_background">

        <TextView
            android:id="@+id/popup_content"
            style="@style/BaseH2Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Melvin Chen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.CardView"
            android:layout_marginTop="20dp"
            android:text="myemail2@email.com" />

        <Button
            android:layout_width="match_parent"
            style="@style/BaseButton"
            android:layout_marginTop="40dp"
            android:text="Sign out"/>

    </LinearLayout>

</RelativeLayout>