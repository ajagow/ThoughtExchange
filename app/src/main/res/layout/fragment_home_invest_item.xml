<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/homefeed_invest_card">

    <TextView
        style="@style/homefeed_invest_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ariel doesn't know what a fork is for, yet her dad wields a trident" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                style="@style/homefeed_invest_card_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ends at: 11:53:36" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    style="card_icon_user"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/investor" />

                <TextView
                    style="@style/card_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="94" />

                <ImageView
                    style="card_icon_coin"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="12dp"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/coin" />

                <TextView
                    style="@style/card_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,276" />
            </LinearLayout>
        </LinearLayout>

        <Button
            style="@style/BaseButton"
            android:layout_alignParentRight="true"
            android:text="invest" />
    </RelativeLayout>
</LinearLayout>