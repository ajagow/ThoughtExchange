<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="40dp"
        android:background="@drawable/login_card_background">

        <TextView
            android:id="@+id/current_feed_post"
            style="@style/homefeed_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Every toothbrush is recommended by dentists because they just want us to brush our teeth to brush our teeth" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/dislike_button"
                style="@style/homefeed_dislike"
                android:background="@drawable/dislike_button" />

            <Button
                android:id="@+id/like_button"
                style="@style/homefeed_like"
                android:background="@drawable/like_button" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>